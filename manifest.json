{
  "manifest_version": 2,

  "name": "CoffeeBreak",
  "description": "Convert CoffeeScript files to JavaScript on GitHub",
  "version": "1.0",

  "permissions": [
    "http://coffee-break-server.herokuapp.com/",
    "https://github.com/api/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.github.com/*/blob/*/*.coffee"],
      "css": ["style.css"],
      "js": ["jquery-2.0.3.min.js", "content_script.js"]
    }
  ]
}